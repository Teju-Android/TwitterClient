<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tejuapp.twitterclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.tejuapp.twitterclient.TwitterApplication"
        android:allowBackup="true"
        android:icon="@drawable/twitter_logo5"
        android:label="@string/twitter_title"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="RestClient.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name="com.tejuapp.twitterclient.LoginActivity"
            android:label="@string/twitter_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cptwitterclient"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tejuapp.twitterclient.TimelineActivity"
            android:label="@string/title_activity_timeline" >
        </activity>
        <activity
            android:name="com.tejuapp.twitterclient.ComposeActivity"
            android:label="@string/title_activity_compose"
            android:parentActivityName="com.tejuapp.twitterclient.TimelineActivity" >
        </activity>
        <activity
            android:name="com.tejuapp.twitterclient.ViewTweetActivity"
            android:label="@string/tweet_label"
            android:parentActivityName="com.tejuapp.twitterclient.TimelineActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tejuapp.twitterclient.TimelineActivity" />
        </activity>
    </application>

</manifest>
